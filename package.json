{
  "name": "taro",
  "version": "0.0.1",
  "description": "a local browser using manifests as the data source",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "NODE_ENVIRONMENT='production' node index",
    "dev": "NODE_ENVIRONMENT='development' nodemon index",
    "prod": "npm start",
    "build": "npm run build:jsx && npm run build:js && npm run build:css",
    "build:jsx": "jsx src/ lib/",
    "build:js": "browserify lib/main.js -o static/main.js",
    "build:css": "autoprefixer src/main.css -o static/main.css",
    "watch": "npm run build && onchange src/* -- npm run build"
  },
  "author": "cvan",
  "license": "MIT",
  "dependencies": {
    "hapi": "^8.4.0",
    "react": "^0.12.2",
    "react-document-title": "^1.0.2",
    "react-router": "^0.12.4",
    "request": "^2.51.0"
  },
  "devDependencies": {
    "autoprefixer": "^5.0.0",
    "browserify": "^9.0.3",
    "nodemon": "^1.3.7",
    "onchange": "0.0.2",
    "react-tools": "^0.12.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cvan/taro.git"
  },
  "bugs": {
    "url": "https://github.com/cvan/taro/issues"
  },
  "homepage": "https://github.com/cvan/taro"
}
